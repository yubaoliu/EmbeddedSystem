
<?php
/*****************************
*数据库连接
*****************************/

$conn = @mysql_connect("localhost","root","abcd123");
if (!$conn){
	die("连接数据库失败：" . mysql_error());
}
mysql_select_db("logistics", $conn);
//字符转换，读库
mysql_query("set character set 'gb2312'");
//写库
mysql_query("set names 'gb2312'");
?>
